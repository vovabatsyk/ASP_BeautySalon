@model PostModel

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control" value="@Model.Title" disabled>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3" title="@Model.Description" disabled></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Link"></label>
        <input asp-for="Link" type="text" class="form-control" value="@Model.Link" disabled>
    </div>
    <button type="submit" class="btn btn-danger">Видалити</button>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary m3">Назад до списку</a>
</form>
