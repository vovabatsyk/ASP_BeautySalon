@model PostModel

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control" value="@Model.Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3" title="@Model.Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Link"></label>
        <input asp-for="Link" type="text" class="form-control" value="@Model.Link">
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="IsShow" type="checkbox" class="form-check-input" checked="@Model.IsShow">
        <label class="form-check-label" asp-for="IsShow"></label>
    </div>
    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary m3">Назад до списку</a>
</form>
