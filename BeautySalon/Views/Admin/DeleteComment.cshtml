@using BeautySalon.Data.Models
@model CommentModel

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control" value="@Model.Title" disabled>
    </div>
    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control" rows="3" title="@Model.Text" disabled></textarea>
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" type="text" class="form-control" value="@Model.UserName" disabled>
    </div>
    <div class="form-group">
        <label asp-for="UserCity"></label>
        <input asp-for="UserCity" type="text" class="form-control" value="@Model.UserCity" disabled>
    </div>
    <button type="submit" class="btn btn-danger">Видалити</button>
    <a asp-controller="Admin" asp-action="Comments" class="btn btn-secondary m3">Назад до списку</a>
</form>
