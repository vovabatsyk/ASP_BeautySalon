@using BeautySalon.Data.Models
@model ProductModel

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" value="@Model.Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" class="form-control" value="@Model.Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="IsDiscount" type="checkbox" class="form-check-input" checked="@Model.IsDiscount">
        <label class="form-check-label" asp-for="IsDiscount"></label>
    </div>
    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-controller="Admin" asp-action="Products" class="btn btn-secondary m3">Назад до списку</a>
</form>
