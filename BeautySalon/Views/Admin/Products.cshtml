@using BeautySalon.Data.Models
@model IList<ProductModel>

<h1 class="text-center pt-4">Послуги</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Назва</th>
            <th scope="col">Ціна</th>
            <th scope="col" class="action">Дія</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in @Model)
        {
            <tr>
                <th scope="row">@post.Id</th>
                <td>@post.Name</td>
                <td>@post.Price</td>
                <td><button class="btn btn-warning m-2"><i class="fa fa-edit"></i></button><button class="btn btn-danger m-2"><i class="fa fa-trash"></i></button> </td>
            </tr>
        }
    </tbody>
</table>
