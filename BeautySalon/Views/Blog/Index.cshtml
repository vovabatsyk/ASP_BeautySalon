@{
    ViewData["Title"] = "ASP_ITStep";
    @model IList<PostModel>;
}

<div class="logoarea">
    <div class="intro">
        <h1>
            <span class="smaller wow zoomIn" data-wow-duration="2s" data-wow-delay="0.5">м.Львів, вул. Новознесенська 55</span>
            <span class="big wow pulse" data-wow-duration="1s" data-wow-delay="0s">Euphoria</span>
            <span class="small wow fadeIn" data-wow-duration="2s" data-wow-delay="0.5s">- Салон Краси -</span>
        </h1>
    </div>
</div>
<div class="pagearea">
    <h1 class="page-headline">BLOG</h1>
    <i class="iconstartitle textmagenta fa fa-star"></i>
    @foreach (var post in @Model)
   {
       <h1>@post.Title</h1>
       <p>@post.Description
       <a href="@post.Link" target="_blank" class="readmore">Read more</a></p>
   }
</div>


<div class="clearfix"></div>


